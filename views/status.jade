!!! 5
html(lang="en")
  head
    title Transcription Status
    link(rel="stylesheet/less", type="text/css", href="styles/base.less")
    link(rel="stylesheet/less", type="text/css", href="styles/status.less")
    link(rel="stylesheet", type="text/css", href="styles/ui-progress-bar.css")
    script(type="text/javascript", src="/js/less.min.js")
    script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")

    :coffeescript
      console.log 'hi'

  body
    div#container.row
      div#hdr.column.grid_12
        center
          h1 Transcription Status
      nav#sidebar.column.grid_3
        ul.text
          li
            a(href="/") Home
      div#main.column.grid_9
        div.text
          for journal in journals
            h3= journal.title
            p Owned by #{journal.email}
            div.ui-progress-bar.ui-container
              div.ui-progress(style="width: #{journal.progress}%;")
                span.ui-label
                  b.value= journal.progress + '%'
            if journal.completed
              p Transcription complete
              p The pdfs can be viewed at:
                a(href="#{journal.searchable}") searchable
                | and
                a(href="#{journal.transcribed}") transcribed
            else
              p Transcription incomplete
            ul.segments
              for s, i in journal.segments
                if s.completed
                  li <a href="#{s.url}">Segment #{i}</a> on page #{s.page + 1} of type #{s.mode} is complete
                else
                  li <a href="#{s.url}">Segment #{i}</a> on page #{s.page + 1} is pending
